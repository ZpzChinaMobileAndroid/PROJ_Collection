<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="#ffffff">

    <ImageView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/seach_resultfind"
        android:id="@+id/iv_seach_find"
        android:layout_gravity="left"
        android:layout_weight="2"/>
    
    <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_seach_content"
        android:textColor="@color/black"
        android:text="广粤路"
        android:textSize="@dimen/activity_14_size"
        android:layout_weight="8"
        />

     <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_seach_number"
        android:textColor="@color/black"
        android:text="10"
        android:textSize="@dimen/activity_14_size"
        android:layout_weight="1"
        />
     
     <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_seach_number_quantity"
        android:textColor="@color/black"
        android:text="条"
        android:textSize="@dimen/activity_14_size"
        android:layout_weight="1"
        />
    
</LinearLayout>
