<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:background="@color/white"
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <RadioButton
            android:button="@null"
            android:drawableBottom="@drawable/radiobutton_line_selector"
            android:id="@+id/radio0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我发布的项目" />

        <RadioButton
            android:button="@null"
            android:drawableBottom="@drawable/radiobutton_line_selector"
            android:id="@+id/radio1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="本地保存项目" />
    </RadioGroup>

    
    <com.zhongji.collection.widget.RTPullListView
        android:paddingBottom="@dimen/pro_item_pall"
        android:divider="@color/gray_proall_bg"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent"
        android:background="@color/gray_proall_bg"
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.zhongji.collection.widget.RTPullListView>

</LinearLayout>