<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:text="原密码:"
            android:textColor="@color/blue_pro_txt" />

        <EditText
            android:id="@+id/et_oldpassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:ems="10"
            android:gravity="left"
            android:hint="请输入原始密码"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_14_size" />
    </LinearLayout>

    <View style="@style/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="新密码:"
            android:textColor="@color/blue_pro_txt"
            />

        <EditText
            android:background="@null"
            android:id="@+id/et_newpassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="请输入新密码"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_14_size" />
    </LinearLayout>

    <View style="@style/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="重复密码:"
            android:textColor="@color/blue_pro_txt"
            />

        <EditText
            android:background="@null"
            android:id="@+id/et_newsecendpassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="请再次输入新密码"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_14_size" />
    </LinearLayout>

    <View style="@style/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp" >

        <Button
            android:onClick="onClick"
            android:id="@+id/bt_modificition"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_sure"
            android:text="确\t认"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_16_size" />
    </LinearLayout>

</LinearLayout>