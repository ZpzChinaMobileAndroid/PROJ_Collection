<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_pro_bg_title"
            android:padding="@dimen/pro_marginall" >

            <TextView
                android:id="@+id/textView1"
                style="@style/pro_tv_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/pro_jian_l"
                android:text="桩基基坑"
                android:textColor="@color/gray_pro_txt" />

            <TextView
                android:id="@+id/textView1"
                style="@style/pro_tv_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/pro_jian_r"
                android:text="消防景观/绿化"
                android:textColor="@color/gray_pro_txt" />
        </RelativeLayout>

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_pro_bg_photo"
            android:horizontalSpacing="@dimen/pro_detial_marg10"
            android:numColumns="3"
            android:verticalSpacing="@dimen/pro_detial_marg10" >
        </GridView>
    </LinearLayout>

</ScrollView>