<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_left"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小黄人"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_16_size" />

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Welcome"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_16_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:src="@color/white" />

    <TextView
        android:clickable="true"
        android:onClick="onClick"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/tv_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/retreat_clear"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="清除本地数据"
        android:textColor="@color/white"
        android:textSize="@dimen/activity_16_size" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@color/white" />

    <TextView
        android:clickable="true"
        android:onClick="onClick"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/tv_editpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/retreat_editpassword"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="修改密码"
        android:textColor="@color/white"
        android:textSize="@dimen/activity_16_size" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@color/white" />

    <TextView
        android:clickable="true"
        android:onClick="onClick"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/retreat_logout"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/activity_16_size" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@color/white" />

</LinearLayout>