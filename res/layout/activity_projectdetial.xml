<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_prostage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:padding="@dimen/pro_marginall" >

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_stagename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_landinfo_l"
            android:drawablePadding="@dimen/pro_margindrapadding"
            android:gravity="center_vertical"
            android:text="土地信息" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_stagechildname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/pro_margindrapadding"
            android:drawableRight="@drawable/pro_jian_r"
            android:gravity="center_vertical"
            android:text="土地规划/拍卖" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</LinearLayout>